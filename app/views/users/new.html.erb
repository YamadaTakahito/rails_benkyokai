<%= form_with(model: @user, local: true, method: :get, url: users_create_path) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :user_name %>
  </div>

  <div class="field">
    <%= form.label :mail %>
    <%= form.text_field :mail, id: :user_mail %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
